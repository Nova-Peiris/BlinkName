const pin_t MY_LED = D7;

SYSTEM_THREAD(ENABLED);

void setup() {
    
    pinMode(MY_LED, OUTPUT);

}

void loop() {
    //My first name is SUPIPI
    
    //first letter S
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(1s);
    
    //second letter U
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(500ms);
    digitalWrite(MY_LED, LOW);
    delay(1s);
    
    //third letter P
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(500ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(500ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(1s);
    
    //forth letter I
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(1s);
    
    //fifth letter P
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(500ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(500ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(1s);
    
    //sixth letter I
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(250ms);
    
    digitalWrite(MY_LED, HIGH);
    delay(250ms);
    digitalWrite(MY_LED, LOW);
    delay(1s);
    
    
    digitalWrite(MY_LED, HIGH);
    delay(2s);
    digitalWrite(MY_LED, LOW);
    delay(1ms);

}
